<div class="container">
  <div class="row">
    <div class="twelve columns" style="margin-top: 25%">
      <h1>PickTune.io</h1>
      <p>Play "Name That Tune" with friends in a highly competitive music guessing game.</p>
      <form method="post">
        <input size="30" type="text" placeholder="Pick a Name" name="user" value="<%=session[:user]%>" required>
	<select style="width:250px" name="genre" required>
          <option disabled selected value="">Pick a Genre</option>
          <% settings.genres.each do |id,genre| %>
                    <option value="<%=id%>"><%=genre%></option>
          <% end %>
        </select>
        <input class="button-primary" type="submit" value="Let's Play!">
      </form>
    </div>
  </div>
</div>


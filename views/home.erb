<div class="container" style="margin-top:5%">
  <div class="row">
    <div class="col l12 s12 center-align">
      <img src="/images/note-64.png" />
      <h2>PickTun.es</h2>
      <p class="flow-text">Play "Name That Tune" with strangers in a highly competitive music guessing game.</p>
    </div>
  </div>
</div>
  <div class="row <%=settings.available_colors.sample(1).first%> lighten-5 valign-wrapper z-depth-1" style="height:200px">
    <div class="container valign">
	<form method="post" class="col l12 m12 s12">
		<div class="row">
			<div class="input-field col l4 s12 m6">
				<input size="30" type="text" class="validate" maxlength="20" name="user" value="<%=session[:user]%>" required autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" />
				<label class="active" for="user">Pick a Name</label>
			</div>
			<div class="input-field col l4 s12 m6">
	                	<select name="genre" required="required">
        	                	<option disabled selected value="">Pick a Genre</option>
                	            	<% settings.genres.each do |id,genre| %>
                        	              <option value="<%=id%>"><%=genre%></option>
                            		<% end %>
	                         </select>
			</div>
        	        <div class="input-field col l4 s12 m12 center-align">
				<button id="playButton" class="btn waves-effect waves-light" type="submit" name="action">Let's Play</button>
			</div>
		</div>
	</form>
    </div>
</div>
<div class="container">
  <div class="row">
    <div class="col s12 center-align">
      <p class="flow-text"><a href="/scoreboard">See the scoreboard.</a></p>
      <div class="fb-share-button" data-href="http://picktun.es" data-layout="button_count"></div>
    </div>
  </div>
</div>

<script>
$(document).ready(function() {
    $('select').material_select();
});
</script>